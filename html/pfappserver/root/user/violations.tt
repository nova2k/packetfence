[% IF items.size %]
<table class="table table-condensed">
    <thead>
      <tr>
        <th>[% l('Description') %]</th>
        <th>[% l('MAC') %]</th>
        <th>[% l('Start Date') %]</th>
        <th>[% l('Release Date') %]</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    [% FOR item IN items %]
    <tr[% ' class="muted"' IF item.status != 'open' %]>
      <td>[% item.description %]</td>
      <td><a href="[% c.uri_for(c.controller('Node').action_for('view'), [ item.mac ]) %]">[% item.mac %]</a></td>
      <td>[% item.start_date %]</td>
      <td>[% item.release_date %]</td>
    </tr>
    [% END %]
    </tbody>
</table>
[% ELSE %]
  <div id="noResult" class="unwell">
    <i class="icon-legal icon-large"></i><p>[% l('No violation found') %]</p>
  </div>
[% END %]
